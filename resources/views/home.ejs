                        <div class="mb-1"><span class="size  text-xs"><details><summary>Description</summary><p><%= Inditem.description%></p></details></span> </div>
                        <span class="size py-1 px-4 rounded-full uppercase text-xs"><%= Inditem.size%></span>
                        <div class="flex item-center justify-around mt-6">
                            <span class="font-bold text-lg">₹<%= Inditem.price%></span>
                            <button data-pizza="<%= JSON.stringify(Inditem)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                                <span>+</span>
                                <span class="ml-4">Add</span>
                            </button>
                        </div>
    
                    </div>
                </div>
            <%})%>
            
        </div> 
        
    </section>



    