<section class="cart py-16">
    <% if(session.cart) { %>
        <div class="order container mx-auto w-1/2">
            <div class="flex item-center border-b border-gray-300 pb-4">
                <img src="/static/img/cart-black.png" alt="cart-black">
                <h1 class="font-bold ml-4 text-2xl">Order summary</h1>
            </div>
            <div class="pizza-list">
                <% for(let pizza of Object.values(session.cart.items)) { %>
                    <div class="flex intems-center my-8">
                        <img class="w-24" src="/static/images/<%= pizza.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1>
                                <%= pizza.item.name %>
                            </h1>
                            <span>
                                <%= pizza.item.size %>
                            </span>
                        </div>
                        <span class="flex-1">
                           Qty: <%= pizza.qty %> 
                        </span>
                        <span class="font-bold text-lg">â‚¹ <%= pizza.item.price * pizza.qty %></span>
                    </div>
                    <% } %>

            </div>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold ">Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2">â‚¹<%= session.cart.totalPrice %></span>
                </div>
                <% if(user) { %>
                    <div>
                        <form action="/orders" method="post" class="mt-12">
                            <input name="phone" class="border border-gray-400 py-2 w-1/2 mb-4" type="text"
                                placeholder=" Phone Number">
                            <input  name="address" class="border border-gray-400 py-2 w-1/2 mb-4" type="text" placeholder="Address or For 'Take away' type take away">
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full text-white font-bold mt-6"
                                    type="submit">Bagel it !!!</button>
                            </div>
                        </form>
                    </div>
                    <% } else { %>
                        <a href="/login"
                            class="inline-block cursor-pointer btn-primary px-6 py-2 rounded-full text-white font-bold mt-6">Login
                            to continue</a>
                        <% } %>
            </div>
        </div>







        <% } else { %>

            <div class="empty-cart py-16">
                <div class="container mx-auto text-center">
                    <h1 class="tect-3xl font-bold mb-2 ">Cart Empty ðŸ˜•</h1>
                    <p class="text-gray-500 text-lg mb-12"> You probably haven't ordered anything yet. <br>
                        To order something go to menu page</p>
                    <img class="w-2/5 mx-auto" src="/static/img/empty-cart.png" alt="empty-cart">
                    <br><br><br>
                    <a href="/" class="inline-black px-6 py-2 rounded-full btn-primary text-white font-bold mt-24">GO
                        back</a>
                </div>
            </div>
            <% } %>
</section>


